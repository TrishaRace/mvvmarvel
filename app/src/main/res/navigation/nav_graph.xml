<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navGraph"
    app:startDestination="@id/charactersFragment">


    <fragment
        android:id="@+id/characterDetailFragment"
        android:name="com.example.mvvmarvel.feature.character.characterDetail.CharacterDetailFragment"
        android:label="CharacterDetailFragment" >
        <argument
            android:name="character"
            app:argType="com.example.characters.models.view.CharacterView" />
    </fragment>
    <fragment
        android:id="@+id/charactersFragment"
        android:name="com.example.mvvmarvel.feature.character.characterList.CharactersFragment"
        android:label="fragment_characters"
        tools:layout="@layout/fragment_characters" >
        <action
            android:id="@+id/action_charactersFragment_to_characterDetailFragment"
            app:destination="@id/characterDetailFragment" />
    </fragment>
</navigation>